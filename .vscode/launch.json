    "version": "0.2.0",
    "configurations": [
        {
            "name": "Shopping List",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "preLaunchTask": "${defaultBuildTask}",
        },
        {
            "name": "Chrome",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "preLaunchTask": "${defaultBuildTask}",
            "args": [
                "-d",
                "chrome",
                "--web-port",
                "8000",
            ],
        },
        {
            "name": "Web Server",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "preLaunchTask": "${defaultBuildTask}",
            "args": [
                "-d",
                "web-server",
                "--web-port",
                "8000",
                "--web-hostname",
                "0.0.0.0",
            ],
        },
    ]
}